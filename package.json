{
  "name": "glass-mark-native",
  "private": true,
  "version": "0.0.0",
  "author": "Kirill H",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": " cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "tsc && cross-env ELECTRON=true vite build",
    "app:build": "npm run build:for:electron && npm run electron:builder"
  },
  "dependencies": {
    "@lagunovsky/redux-react-router": "^3.2.0",
    "@reduxjs/toolkit": "^1.8.2",
    "date-fns": "^2.28.0",
    "formik": "^2.2.9",
    "nedb-promises": "^6.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux-saga": "^1.1.3",
    "sass": "^1.52.1",
    "socket.io-client": "^4.5.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^19.0.1",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vite-plugin-sass-dts": "^1.1.32",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "www.glass-mark.com",
    "productName": "GlassMark",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
